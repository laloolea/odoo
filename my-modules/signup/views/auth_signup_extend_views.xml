<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="auth_signup_fields_extend" inherit_id="auth_signup.fields" name="extend register fields">

            <xpath expr="//div[hasclass('field-confirm_password')]" position="after">


                <div class="form-group field-reminder">
                    <label for="reminder_question" class="control-label">Password reminder</label>
                    <select name="reminder_question" class="form-control" required="required"
                            t-att-readonly="'readonly' if only_passwords else None"
                            t-att-autofocus="'autofocus' if login and not only_passwords else None">
                        <option value="">Select</option>
                        <option value="What is the name of your first school?">What is the name of your first school?
                        </option>
                        <option value="What is your favorite vacation spot?">What is your favorite vacation spot??
                        </option>
                        <option value="What is your first pet's name?">What is your first pet's name?</option>
                        <option value="What is the name of your favorite restaurant?">What is the name of your favorite
                            restaurant?
                        </option>
                        <option value="What is the name of the street you grew up on?">What is the name of the street
                            you grew up on?
                        </option>
                    </select>
                </div>

                <div class="form-group field-answer">
                    <label for="reminder_answer" class="control-label">Answer</label>
                    <input type="text" name="reminder_answer" t-att-value="reminder_answer"
                            id="reminder_answer" class="form-control" required="required"
                            t-att-readonly="'readonly' if only_passwords else None"
	                        t-att-autofocus="'autofocus' if login and not only_passwords else None" />
                </div>

            </xpath>

        </template>

        <template id="auth_signup_fields_extend_reorder" inherit_id="auth_signup.fields" name="extend register fields">
            <xpath expr="//div[hasclass('field-name')]" position="after">
                <xpath expr="//div[hasclass('field-login')]" position="move"/>
            </xpath>
        </template>

        <template id="auth_signup_fields_extend_names" inherit_id="auth_signup.fields" name="extend register fields">
            <xpath expr="//div[hasclass('field-name')]" position="after">
                <div class="form-group field-last_name">
                    <label for="last_name" class="control-label">Last Name</label>
                    <input type="text" name="last_name" t-att-value="last_name" id="last_name" class="form-control" required="required" t-att-readonly="'readonly' if only_passwords else None"
                           t-att-autofocus="'autofocus' if login and not only_passwords else None"/>
                </div>
                <div class="form-group field-mobile">
                    <label for="middle_name" class="control-label">Middle Name</label>
                    <input type="text" name="middle_name" t-att-value="middle_name" id="middle_name" class="form-control"
                           required="required" t-att-readonly="'readonly' if only_passwords else None"
                           t-att-autofocus="'autofocus' if login and not only_passwords else None"/>
                </div>
            </xpath>
        </template>


        <template id="auth_signup_fields_extend_new" inherit_id="auth_signup.fields" name="extend register fields">
            <xpath expr="//div[hasclass('field-password')]" position="before">
                <div class="form-group field-username">
                    <label for="username" class="control-label">Username</label>
                    <input type="text" name="username" t-att-value="username" id="username" class="form-control" required="required" t-att-readonly="'readonly' if only_passwords else None"
                 t-att-autofocus="'autofocus' if login and not only_passwords else None" />
                </div>
            </xpath>
        </template>

    </data>
</odoo>